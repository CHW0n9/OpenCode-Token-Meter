<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.opencode.token.agent</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>PYTHON_PATH_PLACEHOLDER</string>
        <string>-m</string>
        <string>agent</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>HOMEDIR_PLACEHOLDER/Library/Logs/OpenCode Token Meter/agent.out.log</string>
    
    <key>StandardErrorPath</key>
    <string>HOMEDIR_PLACEHOLDER/Library/Logs/OpenCode Token Meter/agent.err.log</string>
    
    <key>WorkingDirectory</key>
    <string>HOMEDIR_PLACEHOLDER</string>
</dict>
</plist>
